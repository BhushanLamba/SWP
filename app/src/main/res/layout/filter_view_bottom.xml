<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Please select From date to End Date "
        android:layout_margin="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/to_from_date_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/from_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/home_dash_back"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="From date"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_from_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawableRight="@drawable/calendar"
                android:drawableTint="@color/colorPrimary"
                android:gravity="center"
                android:paddingEnd="30dp"
                android:text="Select Date" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/to_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/home_dash_back"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="To date"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_to_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawableRight="@drawable/calendar"
                android:drawableTint="@color/colorPrimary"
                android:gravity="center"
                android:paddingEnd="30dp"
                android:text="Select date" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/filterBtn"
        android:layout_width="match_parent"
        android:text="Proceed to Filter"
        android:textAllCaps="false"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:backgroundTint="@color/colorPrimary"
        android:layout_height="wrap_content"/>

</LinearLayout>