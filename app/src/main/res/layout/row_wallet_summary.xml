<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home_dash_back"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:elevation="8dp"
    android:id="@+id/report_layout"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_operator"
        android:layout_margin="10dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@id/tv_amount"
        android:id="@+id/tv_transaction_id"
        android:text="Recharge of Airtel"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_operator"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/tv_amount"
        android:id="@+id/tv_opening_closing_balance"
        android:text="On XXXXX5666526"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_transaction_id"
        app:layout_constraintStart_toEndOf="@id/img_operator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintEnd_toStartOf="@id/tv_amount"
        android:id="@+id/tv_date_time"
        android:text="at 20/10/2021 10:00 am"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_opening_closing_balance"
        app:layout_constraintStart_toEndOf="@id/img_operator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tv_amount"
        android:id="@+id/tv_transaction_type"
        android:text="Transaction Type"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_date_time"
        app:layout_constraintStart_toEndOf="@id/img_operator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/purple_700"
        app:layout_constraintEnd_toStartOf="@id/tv_amount"
        android:id="@+id/tv_remarks"
        android:text="Remarks"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_transaction_type"
        app:layout_constraintStart_toEndOf="@id/img_operator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginEnd="10dp"
        android:id="@+id/tv_amount"
        android:text="â‚¹ 10"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>